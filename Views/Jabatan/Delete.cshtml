@model hr.Models.UserVM.Delete

@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text-danger">Delete @Model.Nama_Lengkap</h1>

<div class="alert alert-warning">
    <h5>⚠️ Apakah anda yakin ingin menghapus @Model.Nama_Lengkap ?</h5>
    <p class="mb-0">Data yang dihapus tidak bisa dikembalikan.</p>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <h4 class="card-title">Detail User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Email :</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Nama Lengkap :</dt>
            <dd class="col-sm-9">@Model.Nama_Lengkap</dd>

            <dt class="col-sm-3">Jabatan :</dt>
            <dd class="col-sm-9">@Model.Nama_Jabatan</dd>

            <dt class="col-sm-3">Department :</dt>
            <dd class="col-sm-9">@Model.Nama_Department</dd>

            <dt class="col-sm-3">Role :</dt>
            <dd class="col-sm-9">@Model.Role</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</form>
