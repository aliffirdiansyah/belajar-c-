@model hr.Models.Jabatan

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Jabatan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nama_Jabatan" class="control-label"></label>
                <input asp-for="Nama_Jabatan" class="form-control" />
                <span asp-validation-for="Nama_Jabatan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gaji_Pokok" class="control-label"></label>
                <input asp-for="Gaji_Pokok" class="form-control" />
                <span asp-validation-for="Gaji_Pokok" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#editForm").submit(function(e) {
                e.preventDefault(); // cegah submit biasa

                var form = $(this);
                var token = $('input[name="__RequestVerificationToken"]', form).val();

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: token,
                        Id: $("#Id").val(),
                        Nama_Jabatan: $("#Nama_Jabatan").val(),
                        Gaji_Pokok: $("#Gaji_Pokok").val()
                    },
                    success: function(response){
                        // Jika controller redirect, AJAX tidak otomatis redirect
                        // Jadi kita redirect manual
                        alert("Data berhasil diperbarui!");
                        window.location.href = "/Jabatan/Index";
                    },
                    error: function(xhr){
                        alert("Terjadi kesalahan: " + xhr.statusText);
                    }
                });
            });
        });
    </script>
}

