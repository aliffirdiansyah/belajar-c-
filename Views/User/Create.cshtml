@model hr.Models.UserVM.Create

@{
    ViewData["Title"] = "Create User";
}

<h1>Create User</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form id="createForm" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div id="formError" class="alert alert-danger d-none"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", id = "Email" })
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nama_Lengkap" class="form-label"></label>
                @Html.TextBoxFor(x => x.Nama_Lengkap, new { @class = "form-control", id = "Nama_Lengkap" })
                <span asp-validation-for="Nama_Lengkap" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", id = "Password" })
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Id_Jabatan" class="form-label"></label>
                <select asp-for="Id_Jabatan" class="form-control" asp-items="ViewBag.JabatanId">
                    <option value="">-- Pilih Jabatan --</option>
                </select>
                <span asp-validation-for="Id_Jabatan" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Id_Department" class="form-label"></label>
                <select asp-for="Id_Department" class="form-control" asp-items="ViewBag.DepartmentId">
                    <option value="">-- Pilih Department --</option>
                </select>
                <span asp-validation-for="Id_Department" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#createForm").on("submit", function (e) {
                e.preventDefault();

                var form = $(this);
                var errorDiv = $("#formError");
                errorDiv.addClass("d-none").html("");

                $.ajax({
                    url: form.attr("action"),
                    type: "POST",
                    data: form.serialize(), // termasuk AntiForgeryToken
                    success: function (response) {
                        // jika server redirect, anggap berhasil
                        if (response.success) {
                            alert("Data berhasil disimpan!");
                            window.location.href = "/User/Index";
                        } else if (response.errors) {
                            errorDiv.removeClass("d-none");
                            var errors = "";
                            $.each(response.errors, function (key, value) {
                                errors += value + "<br/>";
                            });
                            errorDiv.html(errors);
                        } else {
                            alert("Data berhasil disimpan!");
                            window.location.href = "/User/Index";
                        }
                    },
                    error: function (xhr) {
                        errorDiv.removeClass("d-none");
                        errorDiv.html("Terjadi kesalahan: " + xhr.statusText);
                    }
                });
            });
        });
    </script>
}
