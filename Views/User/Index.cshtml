@model IEnumerable<hr.Models.User>

@{
    ViewData["Title"] = "User List";
}

<h1>User List</h1>
<hr />
@if (User.IsInRole("Admin"))
        {
<p>
    <a asp-action="Create" class="btn btn-primary">+ Add User</a>
</p>
        }

<table id="userTable" class="table table-bordered table-striped datatable">
    <thead class="table-dark">
        <tr>
            <th>No</th>
            <th>Email</th>
            <th>Nama Lengkap</th>
            <th>Jabatan</th>
            <th>Department</th>
            <th>Role</th>
            @if (User.IsInRole("Admin"))
{
            <th style="width: 180px;">Aksi</th>
}
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int no = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td></td>
                    <td>@item.Email</td>
                    <td>@item.Nama_Lengkap</td>
                    <td>@item.Jabatan?.Nama_Jabatan</td>
                    <td>@item.Department?.Nama_Department</td>
                    <td>@item.Role</td>
        @if (User.IsInRole("Admin"))
        {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Yakin mau hapus user ini?');">Delete</a>
                    </td>
        }
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>
