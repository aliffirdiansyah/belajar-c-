@model hr.Models.UserVM.Delete

@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>
<hr />

<h4>Apakah Anda yakin ingin menghapus user ini?</h4>
<div class="row mt-3">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Nama Lengkap</dt>
            <dd class="col-sm-9">@Model.Nama_Lengkap</dd>

            <dt class="col-sm-3">Jabatan</dt>
            <dd class="col-sm-9">@Model.Nama_Jabatan</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Nama_Department</dd>

            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9">@Model.Role</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger">Hapus</button>
            <a asp-action="Index" class="btn btn-secondary">Batal</a>
        </form>
    </div>
</div>
