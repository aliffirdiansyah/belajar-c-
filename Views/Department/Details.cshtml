@model hr.Models.DepartmentVM.Details

@{
    ViewData["Title"] = "Details";
}

<h1>@(Model.Nama_Department) Details</h1>
<hr />

<div>
    <div class="row mb-2">
        <div class="col-sm-3 fw-bold">Nama Department</div>
        <div class="col-auto">:</div>
        <div class="col">@Model.Nama_Department</div>
    </div>
    <div class="row mb-2">
        <div class="col-sm-3 fw-bold">Jumlah Pegawai</div>
        <div class="col-auto">:</div>
        <div class="col">@Model.JumlahPegawai</div>
    </div>

</div>
<div class="mt-3">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-danger" asp-action="Index">Kembali</a>
</div>
